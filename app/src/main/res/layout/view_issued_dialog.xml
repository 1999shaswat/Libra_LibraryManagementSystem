<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gpb="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="40dp"
    android:background="@drawable/white_rounded"
    android:padding="15dp">


    <RelativeLayout
        android:id="@+id/close_relative_viewbooks_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/close_viewissued_books_popup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/llviewissued_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/close_relative_viewbooks_layout"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp">


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llviewissued_books">

        <com.jpardogo.android.googleprogressbar.library.GoogleProgressBar
            android:id="@+id/viewbook_progress"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:visibility="invisible"
            gpb:type="folding_circles" />
    </RelativeLayout>

</RelativeLayout>